<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.clemensb.a177147.HSActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="40"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="159dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/highScoreButton"
            android:textAllCaps="true"
            android:textSize="24dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/hslistView"
        android:layout_width="242dp"
        android:layout_height="56dp"
        android:layout_marginBottom="130dp"
        android:layout_marginEnd="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yourhslistView" />

    <Button
        android:id="@+id/hsbackButton"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginBottom="16dp"
        android:text="@string/backButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/yourhslistView"
        android:layout_width="307dp"
        android:layout_height="257dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="100dp"
        android:textColor="@color/color5"
        app:layout_constraintBottom_toTopOf="@+id/hslistView"
        app:layout_constraintEnd_toEndOf="@+id/hslistView"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/hslistView"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
