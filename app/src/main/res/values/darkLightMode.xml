<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="light">#E0E0E0</color>
    <color name="dark">#a3a7b4</color>

    <!-- Specific Feed activity theme -->
    <style name="FeedActivityThemeDark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/dark</item>
        <item name="android:windowBackground">@color/dark</item>
        <item name="android:colorBackground">@color/dark</item>
    </style>

    <style name="FeedActivityThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/light</item>
        <item name="android:windowBackground">@color/light</item>
        <item name="android:colorBackground">@color/light</item>
    </style>

</resources>
